= form_for @post do |f|
  - if @post.errors.any?
    .group-form__errors
      %h2= "#{@post.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .group-form__field--right
    %label.group-form__label{:for => "group_カテゴリを追加"} 記事の編集
    = f.text_field :title, class: 'group-form__input', placeholder: '記事のタイトルを編集'
    = f.text_area :content, class: 'group-form__input-content', placeholder: '記事内容を編集'
    = f.file_field :image, class: 'group-form__input-image'

  .group-form__field.clearfix
    .group-form__field--left
    .group-form__field--right
      = f.submit class: 'group-form__action-btn'

  = link_to '記事に戻る', @post
  = link_to '一覧に戻る', posts_path